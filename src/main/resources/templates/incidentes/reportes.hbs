{{#partial "contenido"}}
    <section class='container d-flex flex-column s-pad'>
        <div class=''>
            <h3 class='text-center'>Reportes</h3>
        </div>

        <nav class="tabs-reportes">
            <div class='nav nav-underline nav-fill' id='nav-tab' role='tablist'>
                <button
                        class='nav-link active'
                        id='nav-fallas-tab'
                        data-bs-toggle='tab'
                        data-bs-target='#nav-fallas'
                        type='button'
                        role='tab'
                        aria-controls='nav-fallas'
                        aria-selected='true'
                >Fallas por heladera
                </button>
                <button
                        class='nav-link'
                        id='nav-movimiento-tab'
                        data-bs-toggle='tab'
                        data-bs-target='#nav-movimiento'
                        type='button'
                        role='tab'
                        aria-controls='nav-movimiento'
                        aria-selected='false'
                >Viandas retiradas/colocadas por heladera
                </button>
                <button
                        class='nav-link'
                        id='nav-donaciones-tab'
                        data-bs-toggle='tab'
                        data-bs-target='#nav-donaciones'
                        type='button'
                        role='tab'
                        aria-controls='nav-donaciones'
                        aria-selected='false'
                >Viandas donadas por colaboradores
                </button>
            </div>
        </nav>

        <div class='tab-content' id='nav-tabContent'>
            <div
                    class='tab-pane fade show active'
                    id='nav-fallas'
                    role='tabpanel'
                    aria-labelledby='nav-fallas-tab'
                    tabindex='0'
            >
