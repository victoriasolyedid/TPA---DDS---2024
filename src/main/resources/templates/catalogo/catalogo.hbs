{{#partial "contenido"}}
    <div class='container mt-4'>
        <div class='col text-center'>
            <h3>Catálogo</h3>
        </div>

        <form id="publicarForm" method="GET" action="/prod-serv"
              class='d-grid gap-2 d-md-flex justify-content-md-end mb-3'>
            <button class='btn btn-primary me-md-2' type='submit'>Publicar</button>
        </form>

        <div class='d-grid gap-2 d-md-flex justify-content-start mb-4'>
            <h5 class='text'>Puntaje:</h5>
            <h3 class='text ms-2'>{{puntosAcumulados}}</h3>
        </div>

        <div class='d-flex flex-wrap justify-content-start'>
            {{#each productos}}
                <div class='card m-2' style='width: 18rem;'>
                    <!--<img src='{{this.imagen}}' class='card-img-top' alt='{{this.foto}}' /> -->
                    <img src="data:image/jpeg;base64,{{this.imagen}}" alt="{{this.foto}}" class="w-full h-auto mt-2"/>
                    <div class='card-body'>
                        <h5 class='card-title'>{{this.nombre}}</h5>
                        <p class='card-text'>{{this.rubro}}</p>
                        <div class='d-flex justify-content-between align-items-center'>
                            <h4 class='mb-0'>Costo: {{this.valorEnPuntos}}</h4>
                            <form method="POST" action="/canjear-producto" enctype="application/x-www-form-urlencoded">
                                <input type="hidden" name="productoId" value="{{this.id}}">
                                <input type="hidden" name="productoNombre" value="{{this.nombre}}">
                                <input type="hidden" name="productoPuntos" value="{{this.valorEnPuntos}}">
                                <button type="submit" class="btn btn-primary">Canjear</button>
                            </form>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>

